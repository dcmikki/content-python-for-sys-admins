#!/usr/bin/env python3.6

name = ""
surname = "Castellanos"
if name and surname:
    print(f"Nombre completo: {name} {surname}")
elif name:
    print(f"Tu nombre es: {name}")
elif surname:
    print(f"Tu apellido es: {surname}")
else:
    print("No tenemos ni el nombre ni el apellido para la busqueda")



if name or surname:
    print("Tenemos el nombre o el apellido para la busqueda")
else:
    print("No tenemos ni el nombre ni el apellido para la busqueda")

